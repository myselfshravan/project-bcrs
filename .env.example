# T-CRIS Configuration Example
# Copy this file to .env and update with your settings

# Environment
ENVIRONMENT=development
DEBUG=true

# Paths
DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODELS_DIR=models
OUTPUTS_DIR=outputs

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Model Settings
DEFAULT_MODEL=ensemble
RANDOM_SEED=42

# Training Settings
N_FOLDS=5
TEST_SIZE=0.2
BATCH_SIZE=32
MAX_EPOCHS=100
LEARNING_RATE=0.001

# Dashboard Settings
DASHBOARD_PORT=8501
CACHE_TTL=3600

# LLM Settings (Groq API)
GROQ_API_KEY=your_groq_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=tcris.log
